generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  role     String    @default("USER")
  likes    Like[]
  comments Comment[]
  aboutU   AboutU[]
}

model Idea {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  likes       Int       @default(0) // Garder pour perf ou supprimer et compter les Likes
  createdAt   DateTime  @default(now())
  comments    Comment[]
  userLikes   Like[]
  // Champs optionnels pour le formulaire avancé
  category    String?
  priority    String?
  tags        String?
  isAdvanced  Boolean   @default(false)
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  ideaId    Int
  idea      Idea     @relation(fields: [ideaId], references: [id])
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
}

model Like {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
  ideaId Int
  idea   Idea @relation(fields: [ideaId], references: [id])

  @@unique([userId, ideaId])
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  color     String
  createdAt DateTime @default(now())
  // Champs optionnels pour le formulaire avancé
  title     String?
  category  String?
  mood      String?
  isAdvanced Boolean @default(false)
}

model Emergency {
  id              Int      @id @default(autoincrement())
  description     String
  createdAt       DateTime @default(now())
  name            String
  department      String
  urgencyLevel    String   // "MEDIUM", "HIGH", "CRITICAL"
  contactAgreement Boolean @default(false)
  status          String   @default("PENDING") // "PENDING", "IN_PROGRESS", "RESOLVED"
}

model AboutU {
  id                Int      @id @default(autoincrement())
  content           String
  type              String   // "DREAM", "GOAL", "PASSION", "STORY"
  nickname          String   // Pseudo choisi par l'utilisateur
  createdAt         DateTime @default(now())
  userId            Int
  user              User     @relation(fields: [userId], references: [id])
  isSurpriseUnlocked Boolean @default(false)
}
